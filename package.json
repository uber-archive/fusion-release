{
  "name": "fusion-release",
  "version": "0.0.6",
  "description": "Validates and releases fusion packages",
  "main": "src/bootstrap.js",
  "scripts": {
    "lint": "eslint .",
    "clean": "rm -rf packages",
    "bootstrap": "node src/index",
    "verify": "lerna exec --scope fusion-* --scope=browser-tests yarn test",
    "verify-flow": "node src/checkTypes",
    "test": "jest"
  },
  "author": "Kevin Grandon <keving@uber.com>",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^15.2.6",
    "chalk": "^2.3.1",
    "flow-bin": "^0.70.0",
    "fusion-orchestrate": "^1.0.4",
    "lerna": "^2.9.0",
    "shelljs": "^0.8.1"
  },
  "devDependencies": {
    "babel-eslint": "8.2.2",
    "babel-jest": "22.4.3",
    "babel-preset-flow": "^6.23.0",
    "eslint": "4.19.1",
    "eslint-config-fusion": "1.0.0",
    "eslint-plugin-cup": "1.0.0",
    "eslint-plugin-flowtype": "2.46.2",
    "eslint-plugin-import": "2.9.0",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.7.0",
    "jest-cli": "22.4.3"
  },
  "jest": {
    "cache": false,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "src/__tests__/.*.test.js$"
  }
}

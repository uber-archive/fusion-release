{
  "name": "fusion-release",
  "version": "0.0.6",
  "description": "Validates and releases fusion packages",
  "main": "src/bootstrap.js",
  "scripts": {
    "lint": "eslint .",
    "clean": "rm -rf packages",
    "bootstrap": "babel-node src/index",
    "verify": "lerna exec --scope fusion-* --scope=browser-tests yarn test",
    "verify-flow": "babel-node src/checkTypes",
    "test": "jest"
  },
  "author": "Kevin Grandon <keving@uber.com>",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^15.6.2",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "chalk": "^2.4.1",
    "flow-bin": "^0.72.0",
    "fusion-orchestrate": "^1.0.4",
    "lerna": "^2.11.0",
    "shelljs": "^0.8.2"
  },
  "devDependencies": {
    "babel-eslint": "8.2.3",
    "babel-jest": "22.4.4",
    "babel-preset-flow": "6.23.0",
    "eslint": "4.19.1",
    "eslint-config-fusion": "2.0.0",
    "eslint-plugin-cup": "1.0.2",
    "eslint-plugin-flowtype": "2.47.1",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-prettier": "2.6.0",
    "eslint-plugin-react": "7.8.2",
    "jest-cli": "22.4.4"
  },
  "jest": {
    "cache": false,
    "testEnvironment": "node",
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "testRegex": "src/__tests__/.*.test.js$"
  }
}
